            "get" : {
                "summary" : "Retuns a list of available batches",
                "description" : "",
                "operationId" : "getBatches",
                "produces" : [ "application/json" ],
                "parameters" : [ ],
                "responses" : {
                    "200" : {
                        "description" : "successful request",
                        "schema" : {
                            "$ref" : "#/definitions/BatchList"
                        }
                    }
                }
            }
        },
        "/people/students/{batchId}" : {
            "get" : {
                "summary" : "batch-wise student lists",
                "description" : "can access the student details of the specified batch using this API",
                "operationId" : "getStudentsByBatche",
                "produces" : [ "application/json" ],
                "parameters" : [ {
                    "name" : "batchId",
                    "in" : "path",
                    "description" : "Batch ID",
                    "required" : true,
                    "type" : "string"
                    } ],
                    "responses" : {
                        "200" : {
                            "description" : "successful request",
                            "schema" : {
                                "$ref" : "#/definitions/StudentList"
                            }
                        },
                        "404":{
                            "description": "Invalid BatchID supplied"
                        }
                    }
                }
            }
        },
